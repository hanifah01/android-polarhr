<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:gravity="center"
    android:background="@drawable/bg_white">

    <LinearLayout
        android:id="@+id/lyt_tanggal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senin, 01 Jan 2020"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/blue"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_detail"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@+id/lyt_tanggal"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Durasi Total : "
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:id="@+id/textView"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10:09:28"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Durasi Istirahat : "
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:id="@+id/rv_durasi_istirahat"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00:30:00"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Durasi Aktif : "
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:id="@+id/rv_durasi_aktif"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="09:00:00"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kualitas : "
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:id="@+id/rv_kualitas"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="IOD : "
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:id="@+id/rv_iod"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="90 %"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"/>
        </TableRow>
    </LinearLayout>


</LinearLayout>